generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Newsletter {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  createdAt DateTime @default(now())
}

model Press {
  id            Int      @id @default(autoincrement())
  title         String
  linkYoutube   String?
  datePublished DateTime @default(now())
  fileUrl       String?
}

model Team {
  id            Int      @id @default(autoincrement())
  name          String?
  email         String?
  telemovel     String?
  cargo         String?
  fileUrl       String?
  nationality   String?
  datePublished DateTime @default(now())

  @@map("teams")
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  active Boolean
  role   Role    @default(USER)

  createdAt DateTime @default(now())

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
